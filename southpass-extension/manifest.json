{
    "manifest_version": 2,
    "name": "SouthPass",
    "version": "1.0",
  
    "description": "Ajoute une bordure rouge pleine sur l'ensemble des pages web mozilla.org.",
  
    "icons": {
      "48": "icons/border-48.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "mail@mail.com",
        "strict_min_version": "42.0"
      }
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["test.js"]
      }
    ]
  }
  